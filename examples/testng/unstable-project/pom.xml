<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.datorama</groupId>
    <artifactId>unstable-project</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>jar</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.source>1.8</maven.compiler.source>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>6.13.1</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.datorama</groupId>
                <artifactId>suiteng-maven-plugin</artifactId>
                <version>1.1.1</version>
                <executions>
                    <execution>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>testng-generate-with-tests</goal>
                        </goals>
                        <configuration>
                            <suiteName>Parallel Tests With Group Filters</suiteName>
                            <suiteRelativePath>src/test/resources/suiteng-parallel-tests-suite.xml</suiteRelativePath>
                            <testsPackageName>com.examples</testsPackageName>
                            <groups>api-tests</groups>
                            <parallelMode>tests</parallelMode>
                            <threadCount>5</threadCount>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.0.0-M5</version>
                <configuration>
                    <groups>api-tests</groups>
                    <parallel>tests</parallel>
                    <threadCount>5</threadCount>
                    <!-- Uncomment this configuration in order to solve the error -->
<!--                    <suiteXmlFiles>-->
<!--                        <suiteXmlFile>src/test/resources/suiteng-parallel-tests-suite.xml</suiteXmlFile>-->
<!--                    </suiteXmlFiles>-->
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
